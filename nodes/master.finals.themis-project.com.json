{
  "environment": "development",
  "run_list": [
    "role[base]",
    "recipe[latest-postgres::client]",
    "recipe[ngx::default]",
    "recipe[supervisor::default]",
    "recipe[latest-nodejs::default]",
    "recipe[yarn::default]",
    "recipe[themis-finals-lib-attack-result-rb::default]",
    "recipe[themis-finals-lib-checker-result-rb::default]",
    "recipe[htpasswd::default]",
    "recipe[themis-finals::default]"
  ],
  "automatic": {
    "fqdn": "master.finals.themis-project.com"
  },
  "firewall": {
    "rules": [
      {
        "http": {
          "port": 80,
          "protocol": "tcp",
          "source": "0.0.0.0/0"
        }
      },
      {
        "supervisor": {
          "port": 9001,
          "protocol": "tcp",
          "source": "172.20.0.0/24"
        }
      }
    ]
  },
  "ngx": {
    "with_realip": true,
    "with_njs": true
  },
  "themis-finals": {
    "fqdn": "master.finals.themis",
    "extra_fqdn": [
      "finals.themis-project.com"
    ],
    "debug": true,
    "autostart": true,
    "backend": {
      "revision": "master",
      "server": {
        "processes": 4
      },
      "queue": {
        "processes": 4
      }
    },
    "frontend": {
      "revision": "master"
    },
    "stream": {
      "revision": "master"
    },
    "tasks": {
      "cleanup_upload_dir": {
        "enabled": true,
        "cron": {
          "minute": "*/5"
        }
      }
    }
  },
  "supervisor": {
    "inet_port": "0.0.0.0:9001"
  }
}
